@using Campus.Recruitment.Helper
@using Campus.Recruitment.Models
@model Campus.Recruitment.Entities.Entity.PromoteDiploma
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "升级学历";
}

<script src="@AppSetting.Rss_Image/content/static/zheyibu/components/jQuery/jquery.min.js"></script>
<script src="@AppSetting.Rss_Image/content/static/zheyibu/static/js/global.js"></script>
<script src="@AppSetting.Rss_Image/content/static/zheyibu/components/mCustomScrollbar/jquery.mCustomScrollbar.concat.min.js"></script>
<link rel="stylesheet" href="@AppSetting.Rss_Image/content/static/zheyibu/components/mCustomScrollbar/jquery.mCustomScrollbar.css" />
<link rel="stylesheet" href="@AppSetting.Rss_Image/content/static/zheyibu/static/css/global.css" />
<link href="@AppSetting.Rss_Image/content/static/css/zyb/zyb-new20150121.css" rel="stylesheet" type="text/css" />
<script src="@AppSetting.Rss_Image/content/static/zheyibu/static/js/coding.js"></script>
<style>
    .feedback-wrap {
        position: relative;
        margin: 110px auto 160px;
        background-color: #fff;
        border: 1px solid #eee;
        width: 660px;
        height: 446px;
    }

    .feekback-img {
        position: relative;
        display: block;
        top: -60px;
        width: 122px;
        height: 122px;
        margin: 0 auto;
    }

    .feedback-title {
        font-size: 24px;
        color: #333;
        text-align: center;
        margin-top: -46px;
        line-height: 2;
    }

    .feed-list {
        height: 70px;
    }

    .feed-list label {
        display: inline-block;
        width: 152px;
        text-align: right;
        vertical-align: top;
        line-height: 40px;
    }

    .feed-list input,
    #Content {
        display: inline-block;
        width: 402px;
        height: 40px;
        border: 1px solid #eee;
        margin-left: 10px;
        padding-left: 16px;
    }

    .feed-list input:focus {
        border-color: #7cbf59;
    }

    .feed-list.feedcontent {
        height: 194px;
    }

    #Content {
        height: 134px;
        line-height: 1;
        padding: 16px 10px;
        width: 398px;
    }

    #Content:focus {
        outline: none;
        border-color: #7cbf59;
    }

    .feed-list span {
        vertical-align: sub;
        padding: 0 6px;
        color: #ff806f;
    }

    input[type="submit"] {
        float: left;
        width: 124px;
        line-height: 40px;
        height: 40px;
        background-color: #7cbf59;
        color: #fff;
        font-size: 18px;
        margin-left: 162px;
    }

    #Content-error {
        margin-left: 162px;
        color: #f90;
        line-height: 1;
        text-align: left;
    }

    #Email-error {
        margin-left: 162px;
        color: #f90;
        line-height: 2;
        text-align: left;
    }
    
    .wrapper-1000 {
        width: 1000px;
        margin-left: auto;
        margin-right: auto;
        position: relative;
    }
</style>
<div class="feedback-wrap">
    <div class="feedback-box">
        @*<img class="feekback-img" src="@AppSetting.Rss_Image/content/static/student/images/icon/feedback.png">*@
        <form action="/promote-diploma/edit" method="post" id="feedback">
            <input type="hidden" id="id" name="id" value="@Model.Id"/>
            <p class="feedback-title">升级学历</p>
            <div class="feed-list" style="margin-top: 30px;">
                <label for="Name">提升选项：</label>
                <select id="Name" name="Name" value="@Model.Name" style="display: inline-block;width: 420px; height: 40px;border: 1px solid #eee;margin-left: 10px;padding-left: 16px;">
                    <option value="其它升专科" selected="selected">其它升专科</option>
                    <option value="专科升本科">专科升本科</option>
                    <option value="本科升研究生">本科升研究生</option>
                </select>
                
                @*<input type="text" name="Email" id="Email"/>*@
            </div>
            <div class="feed-list feedcontent">
                <label for="Content"><span></span>特别提示：</label>
                <textarea id="Content" name="Note" placeholder="在这里告诉我们你的其它要求">@Model.Note</textarea>
            </div>

            @*<div class="feed-list feedcontent">
                <label for="Content"><span>*</span>问题描述：</label>
                <textarea id="Content" name="Content" placeholder="在这里告诉我们你遇到的问题、意见和建议、各种吐槽吧~（500字以内）"></textarea>
            </div>*@
            <input type="submit" value="提交"/>
        </form>
    </div>
</div>
<script src="@AppSetting.Rss_Image/content/static/lib/js/base/jquery.validate.min.js"></script>
<script>
    $("option[value=@Model.Name]").attr("selected", "selected");

    if ("@ViewBag.Error" != "") {
        alert("@ViewBag.Error");
    }


    $(".header-list .list-item").removeClass("current");
    $(".header-list .list-item").eq(4).addClass("current");
</script>