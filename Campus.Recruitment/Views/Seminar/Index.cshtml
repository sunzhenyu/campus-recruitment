                        var cityName = $('#cityName').text();
                        $('#cityName').css('border', 'none');
                        $('.xjh-city').css('border', '1px solid #ddd');
                        $.ajax({
                            url: '/campustalk/GetCityPinyinById?cityName=' + encodeURI(cityName),
                            success: function(r) {
                                var href;
                                if (!!r) {
                                    href = '/xjh/' + r.cityPy;
                                } else {
                                    href = location.href;
                                }
                                if (r.cityPy == "quanguo") {
                                    href = '/xuanjianghui';
                                    href += '?startDate=' + $('#startDate').val() + '&endDate=' + $('#endDate').val();
                                } else if ($('#startDate').val() || $('#endDate').val()) {
                                    href += '?startDate=' + $('#startDate').val() + '&endDate=' + $('#endDate').val();
                                }
                                if ($('#keyword').val() && href.split('?').length < 2) {
                                    href += '?keyword=' + $('#keyword').val();
                                } else if ($('#keyword').val() && href.split('?').length >= 2) {
                                    href += '&keyword=' + $('#keyword').val();
                                }

                                window.location.href = href;
                            }
                        }); //提交刷新页面
                    }
                };
                $('.xjh-city').css({
                    'border': '1px solid #7cbf59',
                    'border-bottom': '1px solid transparent'
                });
                $(this).cityPicker(options);
            })
        .on('mouseenter',
            '#citySelect',
            function() {
                flag = false;
                $('.xjh-city').css({
                    'border': '1px solid #7cbf59',
                    'border-bottom': '1px solid transparent'
                });
            })
        .on('mouseleave',
            '#citySelect',
            function() {
                flag = true;
                $('.xjh-city').css('border', '1px solid #ddd');
                $(this).remove();
            })
        .on('mouseleave',
            '#cityName',
            function() {
                setTimeout(function() {
                        if (flag) {
                            $('.xjh-city').css('border', '1px solid #ddd');
                            $('#citySelect').remove();
                        } else {
                            return false;
                        }
                    },
                    10)
            })

