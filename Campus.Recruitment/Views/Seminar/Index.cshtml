    $('[data-widget="ui-selectS"]')
        .selectui({
            showText: '全部学校',
            inputHidden: 'input[name="school"]',
            callback: function() {
                var school = $('input[name="school"]').val();
                var href;
                if (school == '') {
                    href = '/seminar/search';
                }
                if ($cityName) {
                    href = "/xjh//" + school;
                } else {
                    href = '/seminar/search';
                }

                if ($('#startDate').val() || $('#endDate').val()) {
                    href += '?startDate=' + $('#startDate').val() + '&endDate=' + $('#endDate').val();
                }

                if ($('#keyword').val() && href.split('?').length < 2) {
                    href += '?keyword=' + $('#keyword').val();
                } else if ($('#keyword').val() && href.split('?').length >= 2) {
                    href += '&keyword=' + $('#keyword').val();
                }

                window.location.href = href;
            },
            scroll: {
                'isScroll': true,
                'height': 170
            }
        });
