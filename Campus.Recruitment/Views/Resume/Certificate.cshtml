            //    $('#certSelet').next(".selectUi").remove();
            //    $('#certText').show();
            //}

            function getcertificationlist(pid) {
                var $certSelet = $("#certSelet");
                if (pid == 9) {
                    validator
                     .removeItem('#certSelet')
                    .addItem({
                        element: '#certText',
                        required: true,
                        display: '证书',
                    });
                    $certSelet.next().hide();
                    $('#certText').show();
                }
                else {
                    validator
                     .removeItem('#certText')
                    .addItem({
                        element: '#certSelet',
                        required: true,
                        display: '证书',
                    });
                    $('#certText').val("").hide();
                    var options = {};
                    var data = {};
                    data.parentid = pid;
                    var url = 'http://www.zheyibu.com/resume/GetCertification';
                    $certSelet.empty();
                    $.get(url, data, function (response) {
                        $.each(response, function (i, v) {
                            $certSelet.append("<option value='" + v.ItemName + "'>" + v.ItemName + "</option>");
                        });
                        $certSelet.next().remove();
                        $certSelet.selectui();
                    }, 'json'
                    );
                }
            }

