            .addItem({
                element: '[name=CertificateDate]',
                required: true,
                errormessageRequired: '请选择获得时间',
            });

            (function () {
                var nowYear = new Date().getFullYear();

                $("#start-certificate").datePick({
                    hiddenField: '#start-certificate-id',
                    startYear: nowYear - 10,
                    defaultYear: nowYear,
                    format: 'yyyy.mm.dd'
                });
            })();


        });//end ready

    });//end seajs.use
</script>
