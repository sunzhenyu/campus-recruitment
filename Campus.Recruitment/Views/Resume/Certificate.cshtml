            $('.birth-date,.birth-date-year').find("ul").on('click', 'li', function (e) {
                dateFormat = $('#startYear').val() + '-' + $('#startMon').val() + "-1";
                $('#StartDate').val(dateFormat)
            });

            window.certValidator = validator = new Validator({
                element: '#form-cert',
