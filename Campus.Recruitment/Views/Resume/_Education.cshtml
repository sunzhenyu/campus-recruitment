@using Campus.Recruitment.Entities.Entity.Customers;
@model List<CustomerEducation>

<div id="info-education" class="info-holder" style="display: block;">
    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <div class="info-item">
                <div class="info-col">
                    <div class="date">@item.Start_edu.ToString("yyyy.MM")  - @item.End_edu.ToString("yyyy.MM")</div>
                    <div class="meta">
                        <span>@item.School_name</span>
                        <span>@item.Major</span>
                    </div>
                    <div class="action-col">
                        <a title="编辑" href="javascript:;" rel="edit" itemid="@item.Id" itemtype="education" class="edit-btn J_ActionBtn"></a>
                        <a title="删除" href="javascript:;" rel="delete" itemid="@item.Id" itemtype="education" class="del-btn J_ActionBtn"></a>
                    </div>
                    <div class="clearfix"></div>
                    <div class="educ-type">
                        @item.Degree
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="no-data-prompt">
            填写教育经历
        </div>
    }

</div>